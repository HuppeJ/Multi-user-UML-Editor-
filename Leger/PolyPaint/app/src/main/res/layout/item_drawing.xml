<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
                android:background="#403196f3">

    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/lock"
               android:layout_alignParentStart="true"
               android:layout_alignParentLeft="true"
               android:layout_marginLeft="10dp"
               android:layout_marginTop="10dp"
               android:layout_marginStart="10dp"
               android:layout_marginBottom="4dp"
               android:layout_alignParentTop="true"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="A DRAWING"
              android:id="@+id/canevas_name_text"
              android:layout_alignParentTop="true" android:layout_toEndOf="@+id/lock"
              android:layout_toRightOf="@+id/lock"
              android:layout_marginLeft="10dp"
              android:layout_marginTop="10dp"
              android:layout_marginStart="10dp"
              android:textColor="#000"
              android:textSize="12dp"
    />

    <ImageView android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/canevas_preview"
               android:src="@drawable/ic_picture"
               android:layout_margin="10dp"
               android:layout_below="@+id/canevas_name_text"/>

    <View
            android:id="@+id/empty_view"
            android:layout_height="20dp"
            android:layout_width="match_parent"
            android:background="#fff"
            android:layout_below="@+id/canevas_preview"
    />

</RelativeLayout>