<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <ImageView android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/canevas_preview"
               android:src="@drawable/ic_picture"
               android:background="@drawable/borders_comment"
               android:layout_marginTop="0dp" android:layout_alignParentTop="true"
               android:layout_alignParentStart="true" android:layout_marginLeft="0dp" android:layout_marginStart="0dp"
               android:layout_alignParentLeft="true"/>

    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/lock"
               android:layout_alignParentStart="true"
               android:layout_alignParentLeft="true"
               android:layout_below="@+id/canevas_preview" android:layout_marginLeft="0dp"
               android:layout_marginTop="4dp" android:layout_marginStart="0dp"
               android:layout_marginBottom="4dp"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="A DRAWING"
              android:id="@+id/canevas_name_text"
              android:layout_marginTop="0dp" android:layout_below="@+id/canevas_preview"
              android:layout_toEndOf="@+id/lock" android:layout_toRightOf="@+id/lock" android:layout_marginLeft="9dp"
              android:layout_marginStart="4dp"/>

</RelativeLayout>