<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.CreateDrawingActivity">
<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="67dp"
                  tools:layout_editor_absoluteX="0dp"
                  android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                  android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintVertical_bias="0.024" android:id="@+id/linearLayout3">

        <TextView
                android:id="@+id/link_name"
                android:text="Link name"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <EditText
                android:id="@+id/link_name_text"
                android:hint="Link name"
                android:background="@android:color/transparent"
                android:inputType="textPersonName"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:maxLines="6"/>

    </LinearLayout>
    <LinearLayout android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="64dp"
                  tools:layout_editor_absoluteX="0dp"
                  android:id="@+id/linearLayout2" android:layout_marginTop="8dp"
                  app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <TextView
                android:id="@+id/link_type"
                android:text="Link Type:"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <Spinner android:layout_gravity="center"
                 android:layout_marginLeft="16dp"
                 android:layout_marginRight="16dp"
                 android:layout_width="0dp"
                 android:layout_weight="1"
                 android:layout_height="wrap_content"
                 android:id="@+id/link_type_spinner"
                 android:layout_marginTop="12dp"></Spinner>

    </LinearLayout>

    <LinearLayout android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="67dp"
                  tools:layout_editor_absoluteX="0dp"
                  android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                  android:id="@+id/linearLayout1" android:layout_marginTop="8dp"
                  app:layout_constraintTop_toBottomOf="@+id/linearLayout2" app:layout_constraintVertical_bias="0.0">

        <TextView
                android:id="@+id/link_multiplicity"
                android:text="Multiplicity:"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


    </LinearLayout>

    <LinearLayout android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="67dp"
                  tools:layout_editor_absoluteX="0dp"
                  android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                  android:id="@+id/linearLayout4" android:layout_marginTop="8dp"
                  app:layout_constraintTop_toBottomOf="@+id/linearLayout1" app:layout_constraintVertical_bias="0.0">

        <TextView
                android:id="@+id/link_multiplicity_to"
                android:text="Multiplicity to: "
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <EditText
                android:id="@+id/link_multiplicity_to_text"
                android:hint="Multiplicity to"
                android:background="@android:color/transparent"
                android:inputType="text"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:maxLines="6"/>

    </LinearLayout>

    <LinearLayout android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="67dp"
                  tools:layout_editor_absoluteX="0dp"
                  android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                  android:id="@+id/linearLayout5"
                  android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
                  app:layout_constraintVertical_bias="0.0">

        <TextView
                android:id="@+id/link_multiplicity_from"
                android:text="Multiplicity from: "
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <EditText
                android:id="@+id/link_multiplicity_from_text"
                android:hint="Multiplicity from"
                android:background="@android:color/transparent"
                android:inputType="text"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:maxLines="6"/>

    </LinearLayout>

    <LinearLayout android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="64dp"
                  tools:layout_editor_absoluteX="0dp"
                  android:id="@+id/linearLayout6"
                  android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

        <TextView
                android:id="@+id/link_color"
                android:text="Link Color:"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <Spinner android:layout_gravity="center"
                 android:layout_marginLeft="16dp"
                 android:layout_marginRight="16dp"
                 android:layout_width="0dp"
                 android:layout_weight="1"
                 android:layout_height="wrap_content"
                 android:id="@+id/link_color_spinner"
                 android:layout_marginTop="12dp"></Spinner>

    </LinearLayout>

    <LinearLayout android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="64dp"
                  tools:layout_editor_absoluteX="0dp"
                  android:id="@+id/linearLayout7"
                  android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout6">

        <TextView
                android:id="@+id/link_thickness"
                android:text="Link Thickness:"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <Spinner android:layout_gravity="center"
                 android:layout_marginLeft="16dp"
                 android:layout_marginRight="16dp"
                 android:layout_width="0dp"
                 android:layout_weight="1"
                 android:layout_height="wrap_content"
                 android:id="@+id/link_thickness_spinner"
                 android:layout_marginTop="12dp"></Spinner>

    </LinearLayout>

    <LinearLayout android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="64dp"
                  tools:layout_editor_absoluteX="0dp"
                  android:id="@+id/linearLayout8"
                  android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout7">

        <TextView
                android:id="@+id/link_style"
                android:text="Link Style:"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <Spinner android:layout_gravity="center"
                 android:layout_marginLeft="16dp"
                 android:layout_marginRight="16dp"
                 android:layout_width="0dp"
                 android:layout_weight="1"
                 android:layout_height="wrap_content"
                 android:id="@+id/link_style_spinner"
                 android:layout_marginTop="12dp"></Spinner>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>