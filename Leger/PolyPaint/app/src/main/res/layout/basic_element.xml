<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.DrawingActivity">

    <LinearLayout
            android:id="@+id/outerResizableLayout"
            android:minHeight="100dp"
            android:minWidth="100dp"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:orientation="vertical">


        <LinearLayout
                android:id="@+id/topButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                <ImageButton
                        android:id="@+id/editButton"
                        android:src="@drawable/edit_button"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
            </LinearLayout>

            <ImageButton
                    android:id="@+id/deleteButton"
                    android:src="@drawable/edit_button"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="100">

            <LinearLayout
                    android:id="@+id/borderResizableLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    tools:layout_editor_absoluteY="93dp"
                    tools:layout_editor_absoluteX="230dp"
                    android:background="@drawable/borders_white"
                    android:gravity="center"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp">

                <LinearLayout
                        android:id="@+id/innerResizableLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <TextView
                            android:id="@+id/first_line"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TEXT1"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/bottomButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_weight="1">

            <ImageButton
                    android:id="@+id/resizeButton"
                    android:src="@drawable/edit_button"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>